@inherits LayoutComponentBase

<div class="loading-dots">
    <div class="dot"></div>
    <div class="dot"></div>
    <div class="dot"></div>
</div>

<style>
    .loading-dots {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 5px;
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        z-index: 9999;
    }

    .dot {
        width: 12px;
        height: 12px;
        background-color: #007bff;
        border-radius: 50%;
        animation: dot-animation 1.4s infinite;
    }

        .dot:nth-child(2) {
            animation-delay: 0.2s;
        }

        .dot:nth-child(3) {
            animation-delay: 0.4s;
        }

    

    }
</style>
