@code {
    [Parameter] public bool IsVisible { get; set; } = true;
    [Parameter] public string Color { get; set; } = "#007bff";
}

@if (IsVisible)
{
    <div class="loading-wave">
        <div class="wave" style="background-color:@Color"></div>
        <div class="wave" style="background-color:@Color"></div>
        <div class="wave" style="background-color:@Color"></div>
    </div>
}

<style>
    .loading-wave {
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        z-index: 9999;
        display: flex;
        align-items: center;
        gap: 4px;
    }

    .wave {
        width: 4px;
        height: 20px;
        animation: wave 1s ease-in-out infinite;
    }

        .wave:nth-child(2) {
            animation-delay: 0.2s;
        }

        .wave:nth-child(3) {
            animation-delay: 0.4s;
        }

    

    }
</style>
