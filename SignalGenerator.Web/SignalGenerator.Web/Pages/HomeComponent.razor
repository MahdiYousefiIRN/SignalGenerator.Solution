@page "/home"

@inject ILogger<HomeComponent> Logger

<h3>Home</h3>

<button @onclick="ShowIndex">Index</button>
<button @onclick="ShowPrivacy">Privacy</button>
<button @onclick="ShowError">Error</button>

@if (!string.IsNullOrEmpty(message))
{
    <p>@message</p>
}

@code {
    private string message;

    private void ShowIndex()
    {
        message = "Index page logic not implemented.";
        Logger.LogInformation("Index page logic executed.");
    }

    private void ShowPrivacy()
    {
        message = "Privacy page logic not implemented.";
        Logger.LogInformation("Privacy page logic executed.");
    }

    private void ShowError()
    {
        message = "Error page logic not implemented.";
        Logger.LogInformation("Error page logic executed.");
    }
} 