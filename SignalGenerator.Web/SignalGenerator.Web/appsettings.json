{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=SignalGenerator;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "AllowedOrigins": [
    "http://localhost:5000",
    "https://localhost:5001"
  ],
  "HttpProtocol": {
    "BaseUrl": "http://localhost:5000"
  },
    "ProtocolSettings": {
      "Http": {
        "BaseUrl": "http://localhost:5000",
        "TimeoutSeconds": 30,
        "MaxRetries": 3
      },
      "Modbus": {
        "DefaultIp": "192.168.1.100",
        "DefaultPort": 502,
        "ConnectionTimeoutMs": 5000,
        "OperationTimeoutMs": 3000,
        "MaxRetries": 3
      },
      "SignalR": {
        "HubUrl": "http://localhost:5000/signalhub",
        "ClientTimeoutSeconds": 30,
        "KeepAliveIntervalSeconds": 15
      }
    },
    "SignalProcessing": {
      "MaxSignalsPerRequest": 1000,
      "DefaultSignalCount": 10,
      "MinFrequency": 40,
      "MaxFrequency": 70,
      "DefaultIntervalMs": 1000
    },
    "Security": {
      "RequireHttps": true,
      "EnableCors": true,
      "EnableCompression": true,
      "MaxRequestSizeBytes": 10485760
    }
  }
